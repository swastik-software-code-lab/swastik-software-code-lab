  <script>
    // RSVP FORM HANDLING
    (function () {
      const form = document.getElementById("rsvp-form");
      const messageEl = document.getElementById("rsvp-message");

      if (!form || !messageEl) return;

      // Replace YOUR_SCRIPT_ID with your actual Google Apps Script deployment ID
      const SCRIPT_URL =
        "https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec";

      form.addEventListener("submit", function (event) {
        event.preventDefault();

        messageEl.textContent = "";
        messageEl.className = "message";

        const formData = new FormData(form);

        if (!formData.get("fullName") || !formData.get("contact")) {
          messageEl.textContent =
            "Please fill in your name and contact details.";
          messageEl.classList.add("message--error");
          return;
        }

        if (!formData.get("attending")) {
          messageEl.textContent = "Please select if you are attending.";
          messageEl.classList.add("message--error");
          return;
        }

        const guests = formData.get("guests");
        if (!guests || Number(guests) <= 0) {
          messageEl.textContent = "Please enter a valid number of guests.";
          messageEl.classList.add("message--error");
          return;
        }

        messageEl.textContent = "Submitting your response...";
        messageEl.classList.add("message--success");

        fetch(SCRIPT_URL, {
          method: "POST",
          body: formData,
        })
          .then(function (response) {
            if (!response.ok) {
              throw new Error("Network response was not ok.");
            }
            return response.text();
          })
          .then(function () {
            form.reset();
            messageEl.textContent =
              "Thank you, your details have been noted.";
            messageEl.className = "message message--success";
          })
          .catch(function () {
            messageEl.textContent =
              "Sorry, something went wrong. Please try again later.";
            messageEl.className = "message message--error";
          });
      });
    })();

    // WHATSAPP SHARE BUTTON
    (function () {
      const shareBtn = document.getElementById("whatsapp-share-btn");
      if (!shareBtn) return;

      shareBtn.addEventListener("click", function () {
        const customMessage =
          "You are warmly invited to Aarav & Meera's wedding. Tap to view the invitation:";
        const shareUrl =
          "https://wa.me/?text=" +
          encodeURIComponent(customMessage + " " + window.location.href);

        window.open(shareUrl, "_blank", "noopener,noreferrer");
      });
    })();
  </script>
